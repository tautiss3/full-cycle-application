<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Equipment</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" media="screen" href="/css/bootstrap-material-design.min.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="/icons/css/open-iconic-bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="/stylesheets/mnd_style.css" />
</head>

<body>
    <ul class="nav nav-tabs bg-secondary">
        <li class="nav-item">
            <a class="nav-link" href="/exercises">Exercises</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/exercises/muscles">Muscles</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/exercises/categories">Categories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="/exercises/equipments">Equipment</a>
        </li>
    </ul>
    


    <div class="container">
        
        <div class="table-container">
            <table class="table table-hover table-light">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(Object.keys(equipmentList).length){ %>
                    <% for(let i = 0; i < equipmentList.length; ++i){ %>
                    <tr data-id="<%= equipmentList[i]._id %>">
                        <td scope="row">
                            <%= i+1 %>
                        </td>
                        <td>
                            <%= equipmentList[i].name %>
                        </td>
                        <td>
                            <span class="oi oi-delete" onclick="deleteRow(this)"></span>
                        </td>
                    </tr>
                    <% } %>
                    <% } %>
                </tbody>
            </table>
            <button type="button" class="create btn btn-primary bmd-btn-fab float-right" data-toggle="modal"
                data-target="#create">
                <span class="oi oi-plus"></span>
            </button>
        </div>

        <!-- Model Create -->
        <div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="createLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createLabel">Add equipment</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/exercises/equipments" method="post" id="createForm" class="container">
                            <div class="row">

                                <fieldset class="form-group bmd-form-group col">
                                    <label for="name" class="bmd-label-floating">Equipment Name</label>
                                    <input type="text" class="form-control" name="name">
                                    <span class="bmd-help">example: Barbell</span>
                                </fieldset>


                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" form="createForm" class="btn btn-primary">Add new</button>
                    </div>
                </div>
            </div>
        </div>

    
    <!-- Modal Edit -->
    <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="editLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editLabel">Edit equipment</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/exercises/equipments/edit" method="post" id="editForm" class="container">
                        <div class="row">
                            <input type="text" class="form-control" name="_id" hidden>
                            <fieldset class="form-group bmd-form-group col">
                                <label for="name" class="bmd-label-static">Equipment Name</label>
                                <input type="text" class="form-control" name="name">
                                <span class="bmd-help">example: Barbell</span>
                            </fieldset>                           

                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" form="editForm" class="btn btn-primary">Save changes</button>
                </div>
            </div>

        </div>


        </div>
    </div>
    <script src="/jquery.slim.min.js"></script>
    <script src="/popper.min.js"></script>
    <script src="/js/bootstrap-material-design.min.js"></script>
    <script>
        let fromDBArray = <%- JSON.stringify(equipmentList) %>; //ignore that
        let deleteRow = element => {
            $('#delete').modal('hide');
            postAjax('/exercises/equipments/delete', {
                _id: element.parentNode.parentNode.dataset.id
            }, function (data) {});
            element.parentNode.parentNode.remove();
        }
    </script>
    <script src="/javascripts/mnd_exercise_extra.js"></script>
</body>

</html>